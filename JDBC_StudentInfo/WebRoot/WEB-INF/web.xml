<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>JDBC_StudentInfo</display-name>
  <servlet>
    <servlet-name>AddStuServlet</servlet-name>
    <servlet-class>com.gaoxin.servlet.AddStuServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>delStuServlet</servlet-name>
    <servlet-class>com.gaoxin.servlet.delStuServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateStuServlet</servlet-name>
    <servlet-class>com.gaoxin.servlet.UpdateStuServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>AddStuServlet</servlet-name>
    <url-pattern>/servlet/AddStuServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>delStuServlet</servlet-name>
    <url-pattern>/servlet/delStuServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateStuServlet</servlet-name>
    <url-pattern>/servlet/UpdateStuServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>